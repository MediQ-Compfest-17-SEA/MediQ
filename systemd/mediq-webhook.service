[Unit]
Description=MediQ GitHub Webhook Server
After=network.target
Wants=network.target

[Service]
Type=simple
User=killerking
WorkingDirectory=/home/killerking/automated_project/compfest/MediQ
ExecStart=/usr/bin/node /home/killerking/automated_project/compfest/MediQ/scripts/github-webhook-server.js
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/killerking/automated_project/compfest/MediQ

[Install]
WantedBy=multi-user.target
